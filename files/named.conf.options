acl confiables {
    127.0.0.0/8;
    192.168.57.0/24;
};

options {
    directory "/var/cache/bind";

    allow-query { confiables; };
    allow-recursion { confiables; };

    forwarders {
        208.67.222.222;
    };

    // Validaci√≥n DNSSEC
    dnssec-validation yes;

    // Escuchar solo en IPv4
    listen-on { any; };
    listen-on-v6 { none; }; 
};
